<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="@drawable/bg5" 
    tools:context=".WordFilesActivity"> 
 
    <TextView 
        android:id="@+id/textWordFiles" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:drawableLeft="?attr/actionModeCloseDrawable" 
        android:text="Word Files " 
        android:textColor="@color/material_on_primary_emphasis_medium" 
        android:textSize="24sp" 
        android:textStyle="bold" 
        app:drawableTint="@color/colorWhite" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.154" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.037" /> 
 
    <View 
        android:id="@+id/dividerWordFiles" 
        android:layout_width="409dp" 
        android:layout_height="2dp" 
        android:background="?android:attr/listDivider" 
        android:backgroundTint="@color/white" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.093" /> 
 
    <Button 
        android:id="@+id/buttonUploadWord" 
        android:layout_width="318dp" 
        android:layout_height="52dp" 
        android:layout_marginTop="100dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Select File you want to upload" 
        android:textAllCaps="false" 
        android:textSize="16sp" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.494" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" /> 
 
    <Button 
        android:id="@+id/buttonWordFolder1" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="20dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Folder 1" 
        android:textAllCaps="false" 
        android:textSize="18sp" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 

 
        app:layout_constraintHorizontal_bias="0.176" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonUploadWord" /> 
 
    <Button 
