<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="@drawable/bg5" 
    tools:context=".HomeActivity"> 
 
 
    <Button 
        android:id="@+id/buttonDep6" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Department 6" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.835" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonDep3" /> 
 
    <Button 
        android:id="@+id/buttonDep5" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Department 5" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.187" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonDep3" /> 
 
    <Button 
        android:id="@+id/buttonMyFiles" 
        android:layout_width="319dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="My Files" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.532" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonAddMore" /> 
 
    <Button 
        android:id="@+id/buttonAddMore" 
        android:layout_width="319dp" 
        android:layout_height="43dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Add More Departments" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonDep5" /> 
 
    <TextView 
        android:id="@+id/textViewHome" 
 
 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:drawableLeft="?attr/actionModeCloseDrawable" 
        android:text="Home " 
        android:textColor="@color/material_on_primary_emphasis_medium" 
        android:textSize="24sp" 
        android:textStyle="bold" 
        app:drawableTint="@color/colorWhite" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.154" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.037" /> 
 
    <View 
        android:id="@+id/dividerHome" 
        android:layout_width="409dp" 
        android:layout_height="2dp" 
        android:background="?android:attr/listDivider" 
        android:backgroundTint="@color/white" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.093" /> 
 
    <Button 
        android:id="@+id/buttonDep2" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="120dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Department 2" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.835" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" /> 
 
    <Button 
        android:id="@+id/buttonDep3" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Department 3" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.187" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonDep1" /> 
 
    <Button 
        android:id="@+id/buttonDep4" 
        android:layout_width="150dp" 
        android:layout_height="86dp" 
        android:layout_marginTop="32dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Department 4" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.835" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/buttonDep2" /> 
 
    <Button 
android:id="@+id/buttonDep1" 
android:layout_width="150dp" 
android:layout_height="86dp" 
android:layout_marginTop="120dp" 
android:backgroundTint="#2DDF7EEF" 
android:text="Department 1" 
android:textStyle="bold" 
app:layout_constraintEnd_toEndOf="parent" 
app:layout_constraintHorizontal_bias="0.187" 
app:layout_constraintStart_toStartOf="parent" 
app:layout_constraintTop_toTopOf="parent" /> 
</androidx.constraintlayout.widget.ConstraintLayout>