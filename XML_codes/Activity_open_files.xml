<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="@drawable/bg5" 
    tools:context=".OpenFilesActivity"> 
 
    <TextView 
        android:id="@+id/textOpenFiles" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:drawableLeft="?attr/actionModeCloseDrawable" 
        android:text="Open Files " 
        android:textColor="@color/material_on_primary_emphasis_medium" 
        android:textSize="24sp" 
        android:textStyle="bold" 
        app:drawableTint="@color/colorWhite" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.154" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.037" /> 
 
    <View 
        android:id="@+id/dividerExcelFiles" 
        android:layout_width="409dp" 
        android:layout_height="2dp" 
        android:background="?android:attr/listDivider" 
        android:backgroundTint="@color/white" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.093" /> 
 
    <Button 
        android:id="@+id/buttonOpenDevice" 
        android:layout_width="318dp" 
        android:layout_height="52dp" 
        android:layout_marginTop="150dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Open Files from this device" 
        android:textAllCaps="false" 
        android:textSize="16sp" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintHorizontal_bias="0.494" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" /> 
 
    <Button 
        android:id="@+id/buttonCloudUpld" 
        android:layout_width="318dp" 
        android:layout_height="52dp" 
        android:layout_marginTop="30dp" 
        android:backgroundTint="#2DDF7EEF" 
        android:text="Open Files from cloud uploads" 
        android:textAllCaps="false" 
        android:textSize="16sp" 
        android:textStyle="bold" 
        app:layout_constraintEnd_toEndOf="parent" 
app:layout_constraintHorizontal_bias="0.494" 
app:layout_constraintStart_toStartOf="parent" 
app:layout_constraintTop_toBottomOf="@+id/buttonOpenDevice" /> 
<Button 
android:id="@+id/buttonOthercompanies" 
android:layout_width="318dp" 
android:layout_height="52dp" 
android:layout_marginTop="30dp" 
android:backgroundTint="#2DDF7EEF" 
android:text="Open Files from this device" 
android:textAllCaps="false" 
android:textSize="16sp" 
android:textStyle="bold" 
app:layout_constraintEnd_toEndOf="parent" 
app:layout_constraintHorizontal_bias="0.494" 
app:layout_constraintStart_toStartOf="parent" 
app:layout_constraintTop_toBottomOf="@+id/buttonCloudUpld" /> 
</androidx.constraintlayout.widget.ConstraintLayout>